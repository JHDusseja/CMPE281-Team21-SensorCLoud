    <div class="container">
        <div class="row" style="margin-top:60px;">
            <div class="col-md-4 col-md-offset-4">
                <form class="form-signin">
                    <fieldset>
                        <h3 class="sign-up-title" style="color:dimgray; text-align: center">Welcome back! Please sign in</h3>

                        <hr class="colorgraph">
                        <input class="form-control" name="Username" placeholder="Username" required="" autofocus="" type="text" ng-model="username"/><br>
                        <input class="form-control" placeholder="Password" name="password" type="password" required="" value="" ng-model="password"/>
                        <a class="pull-right" href="#">Forgot password?</a>
                        <div class="checkbox" style="width:140px;">
                            <label><input name="remember" type="checkbox" value="Remember Me"> Remember Me</label>
                        </div>
                        <input class="btn btn-lg btn-success btn-block" type="submit" value="Login" ng-click="submit();" />
